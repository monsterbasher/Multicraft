all: $(EXEC)

aurora: $(OBJS)
	$(CC) $(LDFLAGS) -o $(EXECPATH)/$@ $(OBJS) -lsfml-graphics -lsfml-window -lsfml-system -lGLU  -lGL -lcAudio  -lVorbis  -lOgg -lopenal

%.o: %.cpp
	$(CC) -o $@ -c $< $(CFLAGS)

clean:
	@rm -rf *.o
